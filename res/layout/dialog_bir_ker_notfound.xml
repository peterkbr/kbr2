<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/bir_ker_dialog_notfound_title"
        android:textSize="@dimen/dialog_title_textSize"/>

    <Spinner
        android:id="@+id/bir_ker_dialog_notfound_tenaz_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/bir_ker_dialog_notfound_orsko_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/bir_ker_dialog_notfound_orsko_list"/>

    <hu.flexisys.kbr.view.numpad.NumPadInput
        android:id="@+id/bir_ker_dialog_notfound_azon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/keret"
        android:gravity="center"
        android:maxLength="10"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/bir_ker_dialog_notfound_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_menu_height"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textSize="@dimen/dialog_menu_textsize"/>

        <Button
            android:id="@+id/bir_ker_dialog_notfound_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_menu_height"
            android:layout_weight="1"
            android:text="@string/ok"
            android:textSize="@dimen/dialog_menu_textsize"/>
    </LinearLayout>

    <hu.flexisys.kbr.view.numpad.NumPad
        android:id="@+id/bir_ker_dialog_notfound_numpad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>