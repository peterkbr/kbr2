<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">

    <TextView
        android:gravity="center_horizontal|bottom"
        android:text="AA"
        android:id="@+id/diagram_name"
        android:layout_width="30dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/diagram_parent"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@drawable/diagram_background"
        android:paddingTop="8dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingBottom="1dp"
        android:weightSum="10000">

        <LinearLayout
            android:padding="1dp"
            android:id="@+id/diagram_red"
            android:orientation="horizontal"
            android:layout_marginRight="1dp"
            android:background="@color/red"
            android:layout_width="0dp"
            android:layout_weight="1667"
            android:layout_height="20dp" />

        <LinearLayout
            android:background="@color/yellow"
            android:id="@+id/diagram_yellow"
            android:orientation="horizontal"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:layout_weight="1667"
            android:layout_height="20dp" />

        <LinearLayout
            android:background="@color/green"
            android:id="@+id/diagram_green"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_weight="1667"
            android:layout_height="20dp" />

        <LinearLayout
            android:padding="1dp"
            android:id="@+id/diagram_blue"
            android:orientation="horizontal"
            android:layout_marginRight="1dp"
            android:background="@color/light_blue"
            android:layout_width="0dp"
            android:layout_weight="1667"
            android:layout_height="20dp" />

        <LinearLayout
            android:background="@color/brown"
            android:id="@+id/diagram_brown"
            android:orientation="horizontal"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:layout_weight="1667"
            android:layout_height="20dp" />

        <LinearLayout
            android:background="@color/orange"
            android:id="@+id/diagram_orange"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_weight="1667"
            android:layout_height="20dp" />
    </LinearLayout>

</LinearLayout>