<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:minWidth="350dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/datePickerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center|bottom" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/date_picker_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_menu_height"
            android:layout_weight="1"
            android:text="@string/ok"
            android:textSize="@dimen/dialog_menu_textsize" />

        <Button
            android:id="@+id/date_picker_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_menu_height"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textSize="@dimen/dialog_menu_textsize" />

        <Button
            android:id="@+id/date_picker_clear"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_menu_height"
            android:layout_weight="1"
            android:text="@string/clear"
            android:textSize="@dimen/dialog_menu_textsize" />
    </LinearLayout>
</LinearLayout>